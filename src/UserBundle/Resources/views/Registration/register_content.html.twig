{% trans_default_domain 'FOSUserBundle' %}


<!-- Page Content
================================================== -->


    <div class="login-register-page">
        <!-- Welcome Text -->
        <div class="welcome-text">
            <h3 style="font-size: 26px;">Let's create your account!</h3>
            <span>Already have an account? <a href="{{ path('fos_user_security_login') }}">Log In!</a></span>
        </div>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'id' : 'register-account-form'}}) }}

        <!-- Account Type -->
        <div class="account-type">
            <div>

                    <input type="radio" name="account-type-radio" id="freelancer-radio" class="account-type-radio"  value="freelancer" checked/>
                <label for="freelancer-radio" class="ripple-effect-dark"><i class="icon-material-outline-account-circle"></i> Freelancer</label>
            </div>

            <div>

                    <input type="radio" name="account-type-radio" id="employer-radio" class="account-type-radio" value="employer"/>
                <label for="employer-radio" class="ripple-effect-dark"><i class="icon-material-outline-business-center"></i> Employer</label>
            </div>
        </div>




        <div class="input-with-icon-left">
            <i class="icon-material-baseline-mail-outline"></i>
            {{ form_widget(form.email,{ 'attr': {'class' : 'input-text with-border','name' : 'emailaddress-register', 'id' : 'emailaddress-register','placeholder': 'form.email'|trans} }) }}
        </div>
        <div class="input-with-icon-left">
            <i class="icon-material-outline-account-circle"></i>
            {{ form_widget(form.username,{ 'attr': {'class' : 'input-text with-border','name' : 'username-register', 'id' : 'username-register','placeholder':'form.username'|trans} }) }}
        </div>
        <div class="input-with-icon-left">
            <i class="icon-material-outline-lock"></i>
            {{ form_widget(form.plainPassword.first,{ 'attr': {'class' : 'input-text with-border','name' : 'password-register', 'id' : 'password-register', 'placeholder': 'form.password'|trans} }) }}
        </div>
        <div class="input-with-icon-left">
            <i class="icon-material-outline-lock"></i>
            {{ form_widget(form.plainPassword.second,{ 'attr': {'class' : 'input-text with-border','name' : 'password-register', 'id' : 'password-register' ,'placeholder': 'form.password_confirmation'|trans} }) }}
        </div>
        <div>
            <!-- Button -->
            <button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit" >{{ 'registration.submit'|trans }} <i class="icon-material-outline-arrow-right-alt"></i></button>
        </div>
{{ form_end(form) }}



            </div>
